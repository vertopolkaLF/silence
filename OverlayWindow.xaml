<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="silence_.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Simple solid background container -->
    <Border x:Name="RootGrid"
            Background="#FF1E1E1E"
            Padding="0"
            Margin="0"
            UseSystemFocusVisuals="False"
            IsHitTestVisible="True"
            IsTabStop="False">
        <Grid x:Name="OverlayBorder" IsTabStop="False">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Spacing="8">
                <!-- Microphone Icon -->
                <FontIcon x:Name="MicIcon"
                          FontFamily="{ThemeResource SymbolThemeFontFamily}"
                          Glyph="&#xE720;"
                          FontSize="32"
                          Foreground="#28A745"
                          VerticalAlignment="Center"
                          IsTabStop="False"/>
                
                <!-- Status Text (conditionally visible) -->
                <TextBlock x:Name="StatusText"
                           Text="Microphone is unmuted"
                           FontSize="14"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>
                
            <!-- Position mode hint (only visible when dragging) -->
            <Border x:Name="PositionHintBorder"
                    Visibility="Collapsed"
                    Background="#CC000000"
                    CornerRadius="0"
                    Padding="8,4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,-25">
                <TextBlock x:Name="PositionHintText"
                           Text="Drag to position"
                           FontSize="11"
                           Foreground="White"/>
            </Border>
        </Grid>
    </Border>
</Window>

